<%= link_to 'Лікарі', controller: 'doctors' %>
<%= link_to 'Пацієнти', controller: 'patients' %>
<%= link_to 'Запис на прийом', controller: 'receivings' %>
<%= link_to 'Видача довідки', controller: 'certificates' %>

<br>

<p id="notice"><%= notice %></p>

<h1>Лікарі</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.specialty %></td>
        <td><%= link_to 'Переглянути', doctor %></td>
        <td><%= link_to 'Редагувати', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Видалити', doctor, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий лікарь', new_doctor_path %>
