<p id="notice"><%= notice %></p>

<h1>Довідки</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= link_to 'Переглянути', certificate %></td>
        <td><%= link_to 'Редагувати', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Видалити', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова довідка', new_certificate_path %>
